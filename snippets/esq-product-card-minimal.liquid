  <div data-url="{{ product.url }}" class="product-card product-card-minimal {{ size }}">
    <div class="product-card__image-wrap product-card-minimal__image-wrap">
      <img class="product-card-minimal__image" loading="lazy" src="{{ product.featured_media | image_url }}" alt="{{ product.title }}" width="300" height="300">
      <div class="product-card-minimal__overlay {{ size }}">
        <div class="product-card-minimal__overlay-text-content">
          <h6 class="product-card-minimal__overlay-title">{{ product.title }}</h6>
          <p class="p-small color-heading product-card-minimal__overlay-description">{{ product.description }}</p>
          {% render 'esq-price', orientation: "vertical", size: "regular", product: product %}
        </div>

        {%- render "esq-product-form", product: product, direct_checkout: direct_checkout -%}
      </div>
    </div>
    <div class="product-card-minimal__content">
      <a href="{{ product.url }}" class="h6 product-card-minimal__title m-0">{{ product.title }}</a>
      {% render 'esq-price', product: product %}
    </div>
  </div>
