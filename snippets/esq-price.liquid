<div class="price {{ size }} {{ orientation }}">
  {%- if product.compare_at_price > product.price -%}
    <span class="price-old">{{ product.compare_at_price | money }}</span>
    <span class="price-new">{{ product.price | money }}</span>
  {%- else -%}
  {{ product.price | money }}
  {%- endif -%}
</div>
