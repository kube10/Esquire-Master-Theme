{%- if cart != empty -%}
  {%- for item in cart.items -%}
    <div id="cart-notification-product-{{ item.id }}" class="cart-item">
      <span>{{item.product.title | escape}}</span>
      {%- unless item.product.has_only_default_variant -%}
        {%- for option in item.options_with_values -%}
          <div class="cart-notification__options">
            <span class="p-small">{{ option.name }}: </span>
            <span class="p-small">{{ option.value }}</span>
          </div>
        {%- endfor -%}
      {%- endunless -%}
    </div>
  {%- endfor -%}
{%- endif -%}
