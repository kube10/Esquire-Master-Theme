{{ "header.css" | asset_url | stylesheet_tag }}

<link rel="stylesheet" href="{{ 'component-cart-notification.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-cart-items.css' | asset_url }}" media="print" onload="this.media='all'">

{%- assign primary_menu = section.settings.primary_menu -%}
{%- assign secondary_menu = section.settings.secondary_menu -%}
{%- assign fixed = settings.fixed-navigation -%}
{%- assign logo = section.settings.logo -%}
{%- assign logo_svg = section.settings.logo_svg -%}
{%- assign logo_mobile = section.settings.logo_mobile -%}
{%- assign logo_svg_mobile = section.settings.logo_svg_mobile -%}
{%- assign dropdown = section.settings.dropdown -%}
{%- assign feature_active = section.settings.feature_active -%}
{%- assign feature_img = section.settings.feature_image -%}
{%- assign feature_link = section.settings.feature_link -%}
{%- assign feature_title = section.settings.feature_title -%}

<script src="{{ 'details-disclosure.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'details-modal.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'cart-notification.js' | asset_url }}" defer="defer"></script>

{%- render 'cart-notification' %}

{%- case section.settings.navbar -%}
{%- when 'navigation-1' -%}
  {% render 'esq-navigation-1', config: section.settings %}
{%- endcase -%}

{%- schema -%}
{
  "name": "Header",
  "tag": "header",
  "class": "header",
  "settings": [
    {
      "type": "select",
      "id": "navbar",
      "label": "Navigatiebalk",
      "info": "Kies hier een navigatiebalk. Niet alle navigatiebalken zijn compatibel met twee menu's.",
      "options": [
        {
          "value": "navigation-1",
          "label": "Navigatie 1"
        },
        {
          "value": "navigation-2",
          "label": "Navigatie 2"
        },
        {
          "value": "navigation-3",
          "label": "Navigatie 3"
        },
        {
          "value": "navigation-4",
          "label": "Navigatie 4"
        },
        {
          "value": "navigation-5",
          "label": "Navigatie 5"
        }
      ],
      "default": "navigation-1"
    },
    {
      "type": "link_list",
      "id": "primary_menu",
      "label": "Primair Menu"
    },
    {
      "type": "link_list",
      "id": "secondary_menu",
      "label": "Secundair Menu"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "textarea",
      "id": "logo_svg",
      "label": "Logo SVG Code",
      "info": "Optioneel. Gebruik SVG code voor uw logo. Als deze optie is ingevuld wordt de afbeelding hierboven niet gebruikt."
    },
    {
      "type": "image_picker",
      "id": "logo_mobile",
      "label": "Logo Mobiel (optioneel)"
    },
    {
      "type": "textarea",
      "id": "logo_svg_mobile",
      "label": "Logo SVG Code Mobiel",
      "info": "Optioneel. Gebruik SVG code voor uw logo. Als deze optie is ingevuld wordt de afbeelding hierboven niet gebruikt."
    },
    {
      "type": "header",
      "content": "Dropdown Menu"
    },
    {
          "type": "select",
          "id": "dropdown",
          "label": "Dropdown menu",
          "info": "Kies een dropdown menu (optioneel)",
          "options": [
            {
              "value": "none",
              "label": "Geen"
            },
            {
              "value": "dropdown-1",
              "label": "Dropdown 1"
            },
            {
              "value": "dropdown-2",
              "label": "Dropdown 2"
            }
          ],
          "default": "dropdown-1"
    },
    {
      "type": "checkbox",
      "id": "feature_active",
      "label": "Featured Element",
      "info": "Vink dit aan om een featured link toe te voegen aan het dropdown menu. Let erop dat er genoeg ruimte is en vul de gegevens hierna in.",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "feature_image",
      "label": "Featured Afbeelding",
      "info": "Deze afbeelding wordt gebruikt als achtergrond bij het featured link element."
    },
    {
      "type": "url",
      "id": "feature_link",
      "label": "Featured link",
      "info": "Deze link wordt gebruikt als link bij het featured link element."
    },
    {
      "type": "text",
      "id": "feature_title",
      "label": "Feature Titel"
    }
  ]
}
{%- endschema -%}
