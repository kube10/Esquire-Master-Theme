{{ "header.css" | asset_url | stylesheet_tag }}

{%- assign primary_menu = section.settings.primary_menu -%}
{%- assign secondary_menu = section.settings.secondary_menu -%}
{%- assign fixed = section.settings.fixed_menu -%}
{%- assign logo = section.settings.logo -%}
{%- assign logo_mobile = section.settings.logo_mobile -%}
{%- assign dropdown_active = section.settings.dropdown_active -%}
{%- assign feature_active = section.settings.feature_active -%}
{%- assign feature_img = section.settings.feature_image -%}
{%- assign feature_link = section.settings.feature_link -%}
{%- assign feature_title = section.settings.feature_title -%}


{%- case section.settings.navbar -%}
{%- when 'navigation-1' -%}
  {% include 'navigation-1' %}
{%- endcase -%}

{%- schema -%}
{
  "name": "Header",
  "tag": "header",
  "class": "header",
  "settings": [
    {
      "type": "select",
      "id": "navbar",
      "label": "Navigatiebalk",
      "info": "Kies hier een navigatiebalk. Niet alle navigatiebalken zijn compatibel met twee menu's.",
      "options": [
        {
          "value": "navigation-1",
          "label": "Navigatie 1"
        },
        {
          "value": "navigation-2",
          "label": "Navigatie 2"
        },
        {
          "value": "navigation-3",
          "label": "Navigatie 3"
        },
        {
          "value": "navigation-4",
          "label": "Navigatie 4"
        },
        {
          "value": "navigation-5",
          "label": "Navigatie 5"
        }
      ],
      "default": "navigation-1"
    },
    {
      "type": "link_list",
      "id": "primary_menu",
      "label": "Primair Menu"
    },
    {
      "type": "link_list",
      "id": "secondary_menu",
      "label": "Secundair Menu"
    },
    {
      "type": "checkbox",
      "id": "fixed_menu",
      "label": "Vaststaande navigatiebalk",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo_mobile",
      "label": "Logo Mobiel (optioneel)"
    },
    {
      "type": "header",
      "content": "Dropdown Menu"
    },
    {
      "type": "checkbox",
      "id": "dropdown_active",
      "label": "Dropdown menu actief",
      "info": "Vink dit aan om automatisch een secundair menu aan te maken met de sublinks in het menu.",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "feature_active",
      "label": "Featured Element",
      "info": "Vink dit aan om een featured link toe te voegen aan het dropdown menu. Let erop dat er genoeg ruimte is en vul de gegevens hierna in.",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "feature_image",
      "label": "Featured Afbeelding",
      "info": "Deze afbeelding wordt gebruikt als achtergrond bij het featured link element."
    },
    {
      "type": "url",
      "id": "feature_link",
      "label": "Featured link",
      "info": "Deze link wordt gebruikt als link bij het featured link element."
    },
    {
      "type": "text",
      "id": "feature_title",
      "label": "Feature Titel"
    }
  ]
}
{%- endschema -%}
