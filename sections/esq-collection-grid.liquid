{{ 'esq-product-grid.css' | asset_url | stylesheet_tag }}

{%- assign product_card_size = section.settings.product_card_size -%}

<div class="container">
  <h2>{{section.settings.headline}}</h2>
  <div class="product-grid {{product_card_size}}">
      {%- for product in section.settings.collection.products -%}
        {%- case section.settings.product_card_type -%}
          {%- when 'minimal' -%}
            {%- include 'esq-product-card-minimal', size: product_card_size -%}
          {%- endcase -%}
      {%- endfor -%}
  </div>
</div>

{%- schema -%}
{
  "name": "ESQ Collection Grid",
  "tag": "section",
  "class": "section-p",
  "presets": [
    {
      "name": "ESQ Collection Grid"
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "Titel"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collectie"
    },
    {
      "type": "select",
      "id": "product_card_type",
      "label": "Type productkaarten",
      "default": "minimal",
      "options": [
        {
          "value": "minimal",
          "label": "Minimal"
        },
        {
          "value": "detailed",
          "label": "Detailed"
        }
      ]
    },
    {
      "type": "select",
      "id": "product_card_size",
      "label": "Grootte van productkaarten",
      "default": "regular",
      "options": [
        {
          "value": "small",
          "label": "Klein"
        },
        {
          "value": "regular",
          "label": "Standaard"
        },
        {
          "value": "large",
          "label": "Groot"
        }
      ]
    }
  ]
}
{%- endschema -%}
